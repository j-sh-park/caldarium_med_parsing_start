<View>
  <!-- Show the invoice image -->
  <Image name="image" value="$image"/>

  <Header value="Invoice Metadata"/>

  <!-- Basic invoice info -->
  <TextArea name="invoice_number" toName="image" placeholder="Invoice Number"/>
  <TextArea name="patient_id" toName="image" placeholder="Patient ID"/>
  <TextArea name="invoice_date" toName="image" placeholder="Invoice Date (YYYY-MM-DD)"/>
  <TextArea name="due_date" toName="image" placeholder="Due Date (YYYY-MM-DD)"/>

  <Header value="Patient Information"/>
  <TextArea name="patient_name" toName="image" placeholder="Full Patient Name"/>
  <TextArea name="patient_age" toName="image" placeholder="Patient Age (years)"/>
  <TextArea name="patient_address" toName="image" placeholder="Patient Address"/>
  <TextArea name="patient_phone" toName="image" placeholder="Patient Phone"/>
  <TextArea name="patient_email" toName="image" placeholder="Patient Email"/>

  <Header value="Admission / Discharge"/>
  <TextArea name="admission_date" toName="image" placeholder="Admission Date (YYYY-MM-DD)"/>
  <TextArea name="discharge_date" toName="image" placeholder="Discharge Date (YYYY-MM-DD)"/>

  <Header value="Invoice Amounts"/>
  <TextArea name="subtotal_amount" toName="image" placeholder="Subtotal Amount"/>
  <TextArea name="discount_amount" toName="image" placeholder="Discount Amount"/>
  <TextArea name="total_amount" toName="image" placeholder="Total Amount"/>

  <Header value="Line Items (up to 11)"/>

